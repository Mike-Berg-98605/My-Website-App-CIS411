@{ 
    Layout = "_Layout";

    string ActiveNav(string controller)
    {
        string currentController = ViewContext.RouteData.Values["controller"].ToString();
        return (controller == currentController) ? "active" : "";

    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebsiteApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>    
    <h2>Help Page</h2>
    <nav class="nav nav-tabs">
            <a class="nav-item nav-link @ActiveNav("Home")"
               asp-action="Index" asp-controller="Home" asp-area="Help">Home</a>
            <a class="nav-item nav-link @ActiveNav("Tutorial")"
               asp-action="Page1" asp-controller="Tutorial" asp-area="Help">Tutorial</a>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-right">
            <h5>Always Pay Attention To Your Folder Structure When Routing!!!</h5>
        </div>
    </footer>
</body>
</html>
